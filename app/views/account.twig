{% extends "../layout.twig" %}

{% block title %}
    {{ trans('common.account') }}
{% endblock title %}

{% block sidebar_left %}
    <div class="col-md-3">
        {{ include('account.menu') }}
    </div>
{% endblock %}

{% block content %}
    <div class="col-md-9">
        <h1 class="page-header">{{ trans('common.account') }}</h1>

        <h3>User</h3>

        <p>Login: {{ auth_user().email }}</p>

        <p>{{ trans('common.password') }}: {{ auth_user().password }}</p>

        <p>Remember token: {{ auth_user().rememberToken|default('empty') }}</p>

        <a href="{{ url_route('logout') }}"
           title="{{ trans('common.logout') }}"
           class="btn btn-danger">{{ trans('common.logout') }}</a>
    </div>
{% endblock %}

{% block sidebar_right %}
{% endblock %}

{% block header_region %}
{% endblock %}

{% block footer_region %}
{% endblock %}
