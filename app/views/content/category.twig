{% extends "../layout.twig" %}

{% block title %}
    Category
{% endblock %}

{% block content %}
    <h1 class="page-header">Category</h1>
    <p>ID: {{ content.id }}</p>
    <p>Path: {{ content.path }}</p>
    <p>Type: {{ content.type }}</p>
    {% if children is not empty %}
        <span><strong>Children:</strong></span>
        {% for child in children %}
            <p>ID: {{ child.id }}</p>
            <p>Path: {{ child.path }}</p>
            <p>Type: {{ child.type }}</p>
        {% endfor %}
    {% endif %}
{% endblock %}
