{
    "name": "gzero/platform",
    "description": "GZERO CMS Platform.",
    "keywords": ["framework", "laravel", "cms"],
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Skierniewski",
            "email": "adrian.skierniewski@gmail.com"
        }
    ],
    "require": {
        "gzero/api": "dev-master",
        "gzero/cms": "dev-master",
        "gzero/admin": "dev-master"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "1.*",
        "barryvdh/laravel-debugbar": "1.*",
        "philo/laravel-translate": "dev-master"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize",
            "php artisan debugbar:publish"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev"
}
